<h1>投稿一覧</h1>

<% @books.each do |list| %>

  <p>タイトル</p>
  <span><%= list.title %></span>
  
  <span><%= list.body %></span>
  
  <span><%= link_to 'show', book_path(list.id) %></span>
  
  <span><%= link_to "編集", edit_book_path(list.id) %></span>
  
  <span><%= link_to 'ds', destroy_book_path(list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></span>
  
<% end %>

<h2>New Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!-- form_with部分 -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>